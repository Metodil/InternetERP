@model InternetERP.Web.ViewModels.Contact.ContactUsViewModel
@{
    this.ViewData["Title"] = "Contact Us";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12 m-4">
                <h1>InternetERP</h1>
                <h2>@this.ViewData["Title"]</h2>
            </div>
        </div>
    </div>
</div>
<div class="callback-form contact-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Send us a <em>message</em></h2>
                    <br />
                </div>
            </div>
            <div class="col-md-12">
                <div class="contact-form">
                    <form id="contact" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Full Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <input type="text" class="form-control" id="email" asp-for="Email" placeholder="E-Mail Address">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <input type="text" class="form-control" id="subject" asp-for="Subject" placeholder="Subject">
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12 mt-3">
                                <fieldset>
                                    <textarea rows="6" class="form-control" id="message" asp-for="Content" placeholder="Your Message"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12 mt-2">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="btn btn-success">Send Message</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
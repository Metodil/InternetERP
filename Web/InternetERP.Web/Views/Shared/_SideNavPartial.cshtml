@using InternetERP.Common
@using InternetERP.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@if (this.SignInManager.IsSignedIn(this.User))
{
    <div class="col-md-2">
        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <h3 class="disabled">Admin</h3>
            <hr />
            <ul class="nav nav-pills flex-column" id="sideNav">
                <li class="nav-item"><a class="nav-link" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Administration" asp-controller="Users" asp-action="All">Users</a></li>
            </ul>
        }
        else if (this.User.IsInRole(GlobalConstants.ManagerRoleName))
        {
            <h3 class="disabled">Manager</h3>
            <hr />

            <ul class="nav nav-pills flex-column" id="sideNav">
                <li class="nav-item"><a class="nav-link" asp-area="Employee" asp-controller="DashboardManager"  asp-action="Index">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Employee" asp-controller="Users" asp-action="All">Users</a></li>
            </ul>
        }
        else if (this.User.IsInRole(GlobalConstants.SalesRoleName))
        {
            <h3 class="disabled">Sales</h3>
            <hr />

            <ul class="nav nav-pills flex-column" id="sideNav">
                <li class="nav-item"><a class="nav-link" asp-area="Employee" asp-controller="DashboardSales" asp-action="Index">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Administration" asp-controller="Users" asp-action="All">Users</a></li>
            </ul>
        }
        else if (this.User.IsInRole(GlobalConstants.InternetAccountRoleName))
        {
            <h3 class="">InternetAccount</h3>
            <hr />

            <ul class="nav nav-pills flex-column" id="sideNav">
                <li class="nav-item"><a class="nav-link" asp-area="InternetAccount" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="InternetAccount" asp-controller="Users" asp-action="All">Users</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="InternetAccount" asp-controller="Users" asp-action="All">Users</a></li>
            </ul>
        }
    </div>
}
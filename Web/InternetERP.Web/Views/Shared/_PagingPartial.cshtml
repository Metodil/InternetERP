@model PagingViewModel

<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if(!Model.HasPreviousPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="@Model.AspAction" asp-route-id="@Model.PreviousPageNumber" asp-route-filterBy="@Model.FilterBy">Previous</a>
        </li>
        @for (var i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="@Model.AspAction" asp-route-id="@i" asp-route-filterBy="@Model.FilterBy">@i</a></li>
            }
        }
        <li class="page-item active">
            <span class="page-link">@Model.PageNumber</span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 3; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" asp-action="@Model.AspAction" asp-route-id="@i" asp-route-filterBy="@Model.FilterBy">@i</a></li>
            }
        }
        <li class="page-item @if(!Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="@Model.AspAction" asp-route-id="@Model.NextPageNumber" asp-route-filterBy="@Model.FilterBy">Next</a>
        </li>
    </ul>
</nav>
@using InternetERP.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/lib/Monster/libs/apexcharts/dist/apexcharts.css" />
    <!-- Custom CSS -->
    <link href="~/css/Monster/style.min.css" rel="stylesheet" />

</head>
<body>
    <div id="main-wrapper">

        <partial name="_Header.cshtml" />
        <partial name="_Sidebar.cshtml" />
        <div class="page-wrapper">
@*            <partial name="_Navbar.cshtml" />*@
            <div class="container">
                <partial name="_CookieConsentPartial" />
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="border-top text-muted">
                @* border-top footer text-muted*@
                <div class="container">
                    &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
        </div>
    </div>




    
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <!-- apps -->
    <script src="~/js/Monster/app.min.js"></script>
    <script src="~/js/Monster/app.init.horizontal.js"></script>
    <script src="~/js/Monster/app-style-switcher.horizontal.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/lib/monster/libs/perfect-scrollbar/dist/perfect-scrollbar.jquery.min.js"></script>
    <!--Menu sidebar -->
    <script src="~/js/Monster/sidebarmenu.js"></script>
    <!--Custom JavaScript -->
    <script src="~/js/Monster/feather.min.js"></script>
    <script src="~/js/Monster/custom.min.js"></script>
 


    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model InternetERP.Web.ViewModels.Employee.Manager.ProductInputModelView
@{
    ViewData["Title"] = "Details of product";
}

<div class="row">
    <!-- Column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-body">
                    <h5 class="card-title">About Product</h5>
                    <hr />
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Name" class="control-label"></label>
                                <input type="text" class="form-control" placeholder="Product Name" asp-for="Name" value="@Model.Name" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="SellPrice" class="control-label"></label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="ti-money"></i>
                                    </span>
                                    <input type="text" class="form-control" placeholder="SellPrice" aria-label="SellPrice" asp-for="SellPrice" aria-describedby="basic-addon1" disabled />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="StockQuantity" class="control-label"></label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="fas fa-align-justify"></i>
                                    </span>
                                    <input type="text" class="form-control"
                                           placeholder="StockQuantity"
                                           aria-label="StockQuantity"
                                           asp-for="StockQuantity"
                                           aria-describedby="basic-addon1"
                                           value="@Model.StockQuantity" disabled />
                                </div>
                            </div>
                        </div>
                    </div>
                    <h5 class="card-title mt-2">Product Description</h5>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <textarea class="form-control" asp-for="Description" rows="4" disabled>@Model.Description</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <h5 class="card-title mt-3">Galery</h5>
                        @foreach (var image in Model.ImageUrlList)
                        {
                            <div class="col-md-3">
                                <div class="el-element-overlay">
                                    <div class="el-card-item float-left">
                                        <div class="el-card-avatar el-overlay-1">
                                            <img src="@image.Value" alt="Product image" class="img-thumbnail" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>

@model InternetERP.Web.ViewModels.InternetAccount.Dashboard.IndexViewModel
@{
    this.ViewData["Title"] = "Internet account dashboard";
}

<h1>@this.ViewData["Title"]</h1>
<div class="row">
    <p class="lead d-none d-sm-block">Statistic</p>
    <!-- Column -->
    <div class="col-md-6 col-lg-3 col-xlg-3">
        <div class="card">
            <div class="box p-2 rounded bg-primary text-center">
                <h3 class="text-white">Latest Payments</h3>
                <div class="view-component-content align-content-lg-start">
                    @await Component.InvokeAsync("LatestPaymentsForInternetAccount", new {internetAccountId = Model.InternetAccointId});
                    <vc:LatestPaymentsForInternetAccount internetAccountId="@Model.InternetAccointId"></></vc:LatestPaymentsForInternetAccount>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->
    <div class="col-md-6 col-lg-3 col-xlg-3">
        <div class="card">
            <div class="box p-2 rounded bg-info text-center">
                <h1 class="fw-light text-white">Failures count: @Model.FailureCount</h1>
            </div>
        </div>
    </div>
</div>

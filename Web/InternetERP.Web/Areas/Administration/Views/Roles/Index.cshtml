@using InternetERP.Web.ViewModels.Administration.Roles
@model AllRolesViewModel

@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>

<p>
    <a class="text-white btn btn-primary m-2" asp-action="Create">Add New Role</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>IsDeleted</th>
            <th>CreatedOn</th>
            <th>ModifiedOn</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Roles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                    @Html.DisplayFor(modelItem => item.DeletedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
                <td>
                    <a class="text-white btn btn-primary m-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="text-white btn btn-primary m-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_PagingPartial" model="@Model" />
